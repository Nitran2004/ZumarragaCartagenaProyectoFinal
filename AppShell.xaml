<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LomasZumarraga_ProyectoFinal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LomasZumarraga_ProyectoFinal"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Inicio"
            ContentTemplate="{DataTemplate local:Inicio}" 
            Icon="p_inicio" />

        <ShellContent
            Title="Tecnologia"
            ContentTemplate="{DataTemplate local:Tecnologia}" 
            Icon="tecnologia_t" />

        <ShellContent
            Title="Deportes"
            ContentTemplate="{DataTemplate local:Deportes}" 
            Icon="deportes_b" />

        <ShellContent
            Title="Arte"
            ContentTemplate="{DataTemplate local:Arte}" 
            Icon="paleta_p" />

        <ShellContent
            Title="Cultura"
            ContentTemplate="{DataTemplate local:Cultura}" 
            Icon="trabajo_w" />
    </TabBar>

</Shell>
